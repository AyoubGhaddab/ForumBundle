{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/clarolineforum/js/subjects.js') }}" type="text/javascript"></script>
{% endblock %}

{% block section_content %}
    <ul class="breadcrumb">
        <li>
            <a href="{{ _path('claro_forum_open', {'resourceId': forum.getId()}) }}">
                {{ forum.getName() }}
            </a>
        </li>
    </ul>
    <p>
        <a href="{{ _path('claro_forum_form_subject_creation', {'forumId': forum.getId()}) }}">
            <button class="btn">{{ 'new_subject'|trans({}, 'forum') }}</button>
        </a>
    </p>
    <table id="subjects_table" class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>{{ 'subject'|trans({}, 'forum') }}</th>
                <th>{{ 'responses'|trans({}, 'forum') }}</th>
                <th>{{ 'last_message'|trans({}, 'forum') }}</th>
            </tr>
        </thead>
        <tbody id="table-subjects-body"></tbody>
    </table>
    <div id="twig-attributes"
         data-nbPages="{{ nbPages }}"
         data-forumId="{{ forum.getId() }}"
         data-limit="{{ limit }}">
    </div>
{% endblock %}