{% extends "ClarolineCoreBundle:Workspace:layout.html.twig" %}

{% block javascripts %}
{{ parent() }}
<script src="{{asset('bundles/frontend/jquery/plugin/tinymce/jscripts/tiny_mce/tiny_mce.js')}}" type="text/javascript"></script>
<script type="text/javascript">
tinyMCE.init({
    // General options
    mode : "textareas"
});
</script>
{% endblock %}

{% block section_content %}
    {% form_theme form 'ClarolineCoreBundle::form_theme.html.twig' %}
    <form novalidate="novalidate" action="{{path('claro_forum_create_message',{'subjectId':subjectId})}}" method="post" {{ form_enctype(form) }} id="message_form">
       {{ form_widget(form) }}
       <input type="submit" />
    </form>
{% endblock %}