{% macro renderPager(categoryId, pager, max) %}
    {{
        pagerfanta(
            pager,
            'twitter_bootstrap_translated',
            {
                'proximity' : 1,
                'routeName': 'claro_forum_subjects',
                'routeParams': {'category': categoryId, 'max': max}
            }
        )
    }}
{% endmacro %}

{% from _self import renderPager %}

{% set layout = "ClarolineCoreBundle:Workspace:layout.html.twig" %}

{% if isDesktop() %}
    {% set layout = "ClarolineCoreBundle:Desktop:layout.html.twig" %}
{% endif %}

{% extends layout %}

{% block title %}{{ _resource.getResourceNode().getName() ~ ' - ' ~ parent() | striptags | raw  }}{% endblock %}

{% block resourceBreadcrumb %}
    <li><a href="{{ path('claro_forum_categories', { 'forum': category.getForum().getId() }) }}">{{ _resource.getResourceNode().getName() }}</a></li>
    <li class="active"> {{ category.getName() }} </li>
{% endblock %}

{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">{{ _resource.getResourceNode().getName() }}</h3>
    </div>
    <div class="panel-body">
        <div class="navbar row">
            <div class="col-md-6">
                {% if canCreateSubject %}
                <a class="btn btn-primary" href="{{ _path('claro_forum_form_subject_creation', {'category': category.getId()}) }}">
                    <i class="icon-plus"></i> {{ 'new_subject'|trans({}, 'forum') }}
                </a>
                {% endif %}
            </div>
            <div class="col-md-6">
                <div class="input-group margin-md">
                    <select class="form-control input-md" id="max-select">
                        <option>20</option>
                        <option>50</option>
                        <option>100</option>
                        <option>200</option>
                        <option>500</option>
                    </select>
                    <span class="input-group-addon">{{ 'subjets_per_page'|trans({}, 'forum') }}</span>
                    <button class="filter btn btn-default" type="button" id="search-button">
                        <i class="icon-search"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table id="subjects_table" class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th></th>
                        <th>{{ 'subject'|trans({}, 'forum') }}</th>
                        <th>{{ 'responses'|trans({}, 'forum') }}</th>
                        <th>{{ 'last_message'|trans({}, 'forum') }}</th>
                        {% if isModerator %}
                            <th></th>
                            <th></th>
                        {% endif %}
                    </tr>
                </thead>
                <tbody id="table-subjects-body">
                {% for subject in pager.currentPageResults %}
                    <tr class='row-subject'>
                        <td>
                            {%  if isModerator %}
                                {% if subject['isSticked'] == true %}
                                    <a href="{{ path('claro_subject_unstick', {'subject': subject['id']}) }}">unstick</a>
                                {% else %}
                                    <a href="{{ path('claro_subject_stick', {'subject': subject['id']}) }}">stick</a>
                                {% endif %}
                            {% else %}
                                {% if subject['isSticked'] == true %}
                                    sticked
                                {% endif %}
                            {% endif %}
                        </td>
                        <td>
                            <a class="link-subject"
                                href="{{ _path('claro_forum_messages', {'subject': subject['id'] }) }}"
                            >
                                <b>{{ subject['title'] }}</b>
                            </a>
                            {% if isModerator or app.user.id == subject['subject_creator_id'] %}
                                <a class="pull-right" href="{{ path('claro_forum_edit_subject_form', {'subjectId': subject['id'] }) }}">
                                    <i class="icon-pencil"></i> {{ 'edit' | trans({}, 'platform') }}
                                </a>
                           {% endif %}
                            <br>
                            {{ 'started_by' | trans({}, 'forum') }}
                            {{ subject['subject_creator_firstname'] }}
                            {{ subject['subject_creator_lastname'] }},
                            {{ subject['subject_created']|intl_date_format() }}
                        </td>
                        <td>
                            {{ subject['count_messages'] }}
                        </td>
                        <td>
                            {{ subject['last_message_creator_firstname'] }}
                            {{ subject['last_message_creator_lastname'] }}<br/>
                            {{ subject['last_message_created'] }}
                        </td>
                        {% if isModerator %}
                            <td>
                                <a id="move-subject" href="{{ path('claro_subject_move_form' , {'subject': subject['id']}) }}">
                                    {{ 'move' | trans({}, 'platform') }}
                                </a>
                            </td>
                            <td>
                                <a id="delete-subject" href="{{ _path('claro_forum_delete_subject', {'subject': subject['id']}) }}">
                                    <i class="icon-trash"></i> {{ 'delete' | trans({}, 'platform') }}
                                </a>
                            </td>
                        {% endif %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div>
            {{ renderPager(category.getId(), pager, max) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts debug=false vars=["locale"]
        "@ClarolineForumBundle/Resources/views/removeSubjectConfirm.html.twigjs"
        filter="twig_js"
    %}<script language="javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        $('#max-select').val({{ max }});
        $('#search-button').on('click', function(event) {
            var route = Routing.generate('claro_forum_subjects', {'category': {{ category.getId()}}, 'max': $('#max-select').val() });
            window.location.href = route;
        });
    </script>
        {% if isModerator %}
            <script>
               function createValidationBox() {
                    var html = Twig.render(
                        ModalWindow,
                        {'footer': Twig.render(ValidationFooter), 'isHidden': true, 'modalId': 'confirm-modal', 'body': Twig.render(removeSubjectConfirm, {'nbItems': 1})}
                    );
                    $('body').append(html);
                }

                createValidationBox();
                var tmpRoute = '';
                var tmpEl = undefined;

                $('body').on('click', '#delete-subject', function(event) {
                    event.preventDefault();
                    $('#confirm-modal').modal('show');
                    tmpRoute = event.currentTarget.href;
                    tmpEl = event.currentTarget;
                });

                $('body').on('click', '#modal-valid-button', function(event) {
                    $('#confirm-modal').modal('hide');
                    $.ajax({
                        url: tmpRoute,
                        success: function () {
                            $(tmpEl)[0].parentElement.parentElement.remove();
                        }
                    });
                });
            </script>
    {% endif %}
{% endblock %}